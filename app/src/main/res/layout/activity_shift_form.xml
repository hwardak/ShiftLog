                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Name"
                    android:textSize="@dimen/subtitle_font_size"
                    android:enabled="false"

                    />

            </LinearLayout>

            <LinearLayout
