<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hwardak.shiftlog.ShiftFormActivity"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/infoBannerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/subtitle_font_size"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/nameLinearLayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="@dimen/subtitle_font_size"
                    />

                <EditText
                    android:id="@+id/employeeNameEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Name"
                    android:textSize="@dimen/subtitle_font_size"
                    android:enabled="false"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Time: "
                    android:textSize="@dimen/subtitle_font_size"
                    android:visibility="gone" />
                <!--Change to textview.-->
                <EditText
                    android:id="@+id/timeEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:enabled="false"
                    android:text=""
                    android:textSize="@dimen/subtitle_font_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/dateLinearLayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="Date: "
                    android:textSize="@dimen/subtitle_font_size"
                    />

                <EditText
                    android:id="@+id/dateEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:enabled="false"
                    android:text="Date"
                    android:textSize="@dimen/subtitle_font_size" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/startTimeLinearLayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="Start time: "
                    android:textSize="@dimen/subtitle_font_size"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <EditText
                        android:id="@+id/startTimeHourEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textSize="@dimen/title_font_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title_font_size"
                        android:text=":"
                        />


                    <EditText
                        android:id="@+id/startTimeMinuteEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textSize="@dimen/title_font_size" />

                    <ToggleButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="AM"
                        android:textOn="PM"
                        android:textSize="@dimen/title_font_size"
                        android:id="@+id/startTimeAmPmToggleButton"
                        />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/endTimeLinearLayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="End time: "
                    android:textSize="@dimen/subtitle_font_size"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <EditText
                        android:id="@+id/endTimeHourEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textSize="@dimen/title_font_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title_font_size"
                        android:text=":"
                        />


                    <EditText
                        android:id="@+id/endTimeMinuteEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textSize="@dimen/title_font_size" />

                    <ToggleButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="AM"
                        android:textOn="PM"
                        android:textSize="@dimen/title_font_size"
                        android:id="@+id/endTimeAmPmToggleButton"
                        />


                </LinearLayout>


            </LinearLayout>


            <RadioGroup
                android:id="@+id/tillNumberRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Till #: "
                    android:textSize="@dimen/subtitle_font_size" />

                <RadioButton
                    android:id="@+id/tillOneRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="One"
                    android:textSize="@dimen/subtitle_font_size" />

                <RadioButton
                    android:id="@+id/tillTwoRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="Two"
                    android:textSize="@dimen/subtitle_font_size" />

                <RadioButton
                    android:id="@+id/tillOverLapRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Over Lap"
                    android:textSize="@dimen/subtitle_font_size" />

            </RadioGroup>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/nonOverLapShiftFieldsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/startingTillAmountLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Starting Till $: "
                        android:textSize="@dimen/subtitle_font_size" />

                    <EditText
                        android:id="@+id/startingTillAmountEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:textSize="@dimen/subtitle_font_size" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/finalDropLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Final Drop $: "
                        android:textSize="@dimen/subtitle_font_size" />

                    <EditText
                        android:id="@+id/finalDropAmountEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:textSize="@dimen/subtitle_font_size" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/redemptionsLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Redemptions $: "
                        android:textSize="@dimen/subtitle_font_size" />

                    <EditText
                        android:id="@+id/redemptionsEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="Fuel, Giftcards, and/or Lotto..."
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/subtitle_font_size" />

                </LinearLayout>


                          </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="15sp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="openShiftButtonOnClick"
                    android:text="Open Shift" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="closeShiftButtonOnClick"
                    android:text="Close Shift" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

