                    android:text="Date: "
                    android:textSize="@dimen/subtitle_font_size"
                    />

                <EditText
                    android:id="@+id/dateEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:enabled="false"
                    android:text="Date"
                    android:textSize="@dimen/subtitle_font_size" />

